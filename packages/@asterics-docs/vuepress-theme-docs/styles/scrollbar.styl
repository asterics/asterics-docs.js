.ps
  overflow hidden !important
  overflow-anchor none !important
  .ssr &
      overflow auto !important
      overflow-anchor auto !important
  touch-action auto
  .ps__rail-x
      height 15px
      bottom 0px
      
      &:hover > .ps__thumb-x, &:focus > .ps__thumb-x, &.ps--clicking .ps__thumb-x
          // background-color #999
          background-color darken($borderColor,60%)
          .dark-mode &
            background-color lighten($darkModeTextColor,30%)
          height 11px
      
  .ps__rail-y
      width 15px
      right 0
      
      &:hover > .ps__thumb-y, &:focus > .ps__thumb-y, &.ps--clicking .ps__thumb-y
          // background-color #999
          background-color darken($borderColor,60%)
          .dark-mode &
            background-color lighten($darkModeTextColor,30%)
          width 11px
      
  .ps__rail-x, .ps__rail-y
      display none
      opacity 0
      transition background-color .2s linear, opacity .2s linear
      position absolute
      &:hover, &:focus,
      &.ps--clicking
          // background-color #eee
          background-color darken($borderColor,10%)
          .dark-mode &
            background-color darken($darkModeTextColor,40%)
  &:hover, /.ps--focus
      & > .ps__rail-x, .ps__rail-y, /.ps--scrolling-x > .ps__rail-x, /.ps--scrolling-y > .ps__rail-y
          opacity 0.6
  
  .ps__thumb-x
      transition background-color .2s linear, height .2s ease-in-out
      height 6px
      bottom 2px
      
  .ps__thumb-y
      transition background-color .2s linear, width .2s ease-in-out
      width 6px
      right 2px
  .ps__thumb-x, .ps__thumb-y
      // background-color #aaa
      background-color darken($borderColor,30%)
      .dark-mode &
          background-color darken($darkModeTextColor,0%)
      border-radius 6px
      position absolute
  
.ps--active-x > .ps__rail-x,
.ps--active-y > .ps__rail-y
    display block
    background-color transparent